<header class="header">
    <div class="header__container container">
        <div class="header__logo">
            <a href="/">
                <div class="header__logo-image">
                    {{ '/images/logo.svg' | svg }}
                </div>
            </a>
        </div>
        <div class="header__content">
            <div class="header__nav">{% render "@navigation" %}</div>
            <div class="header__search">
                {% render "@button--secondary", {text: null, icon: 'fi-br-search', class: 'header__search-button'} %}
            </div>
            <div class="header__social"></div>
            <div class="header__action"></div>
            <div class="header__account"></div>
            <div class="header__search-container">
                {% include "@search" %}
            </div>
        </div>
        <div class="header__nav-button">
        </div>
    </div>
</header>
