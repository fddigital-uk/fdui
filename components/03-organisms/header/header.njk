<header class="header">
    <div class="header__container container">
        <div class="header__logo">
            <a href="/">
                <div class="header__logo-image">
                    {{ '/images/logo.svg' | svg }}
                </div>
            </a>
        </div>
        <div class="header__content">
            <div class="header__nav">{% render "@navigation" %}</div>
            <div class="header__action">
                {% render "@button--secondary", {text: 'Get in touch', icon: 'email', url: '/contact/' } %}
            </div>
            <div class="header__account">
                {% render "@drop-menu--account", { text: 'My account', type: 'div', class: 'header__account-drop'} %}
            </div>
            <div class="header__search">
                {% render "@button--secondary", {text: null, icon: 'fi-br-search', class: 'header__search-button'} %}
            </div>
            <div class="header__search-container">
                {% render "@search", { attrs: {'aria-hidden': 'true'} } %}
            </div>
        </div>
        <div class="header__nav-button">
            {% render "@menu-button", {class: 'header__menu-button'} %}
        </div>
    </div>
</header>
